{
    "overrides": [
        {
          "files": ["**/*.spec.js", "**/__mocks__/**"],
          "env": {
            "jest": true
          }
        }
    ],
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-restricted-syntax":"off",
        "no-unused-vars":"warn",
        "no-irregular-whitespace":"off",
        "import/extensions":"off",
        "no-use-before-define":"off",
        "no-shadow":"off"
    }
}
